@model Animal

@{
    ViewBag.Title = "Добавить животное";
    Layout = "_Layout";
}
<h2>Заполните форму для добавления животного</h2>
<div class="row">
    <div class="phone_add_form col-md-6">
        <form asp-action="Create" method="post">
            <div class="form-group mb-3">
                <label for="title" class="mb-2">Наименование</label>
                <input asp-for="Title"
                       type="text"
                       class="form-control"
                       id="title"
                       placeholder="Наименование животного">
            </div>
            <div class="form-group mb-3">
                <label for="type" class="mb-2">Тип</label>
                <input asp-for="Type"
                       type="text"
                       class="form-control"
                       id="type"
                       placeholder="Траваядное, хищник">
            </div>
            <button type="submit" class="btn btn-outline-info mt-3">Создать</button>
        </form>
    </div>
</div>
